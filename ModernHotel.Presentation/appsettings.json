    "Name": "Modern Hotel",
    "Address": "123 Main Street",
    "City": "New York",
    "State": "NY",
    "ZipCode": "10001",
    "Country": "USA",
    "Phone": "+1 (555) 123-4567",
    "Email": "info@modernhotel.com",
    "Website": "https://www.modernhotel.com",
    "CheckInTime": "14:00",
